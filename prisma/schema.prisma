generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  created_at DateTime @default(now())
  book       Book[]
}

model Book {
  id         Int       @id @default(autoincrement())
  name       String
  userId     Int
  created_at DateTime  @default(now())
  author     User      @relation(fields: [userId], references: [id])
  chapters   Chapter[]
}

model Chapter {
  id                Int                @id @default(autoincrement())
  initialXPoint     Int                @default(1)
  initialYPoint     Int                @default(1)
  name              String
  introduction      String
  bookId            Int
  created_at        DateTime           @default(now())
  book              Book               @relation(fields: [bookId], references: [id])
  explorationPoints ExplorationPoint[]
  map               Map                @relation(fields: [mapId], references: [id])
  mapId             Int
}

model Map {
  id             Int       @id @default(autoincrement())
  name           String
  mapText        String
  mapImagebase64 String
  mapImageUrl    String
  xMapSize       Int
  yMapSize       Int
  Chapter        Chapter[]
}

model ExplorationPoint {
  id                    Int      @id @default(autoincrement())
  name                  String
  code                  String
  xPosition             Int
  yPosition             Int
  pointIntroductionText String
  pointChallangeText    String
  chapterId             Int
  created_at            DateTime @default(now())
  chapter               Chapter  @relation(fields: [chapterId], references: [id])
}

model ExplorationPointPreviousRelation {
  id              Int @id @default(autoincrement())
  previousPointId Int
  nextPointId     Int
}
